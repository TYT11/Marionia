{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "airbnb"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "quotes": [2, "double"],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".ts"] }],
    "react/jsx-one-expression-per-line": "off",
    "indent": "off",
    "react/jsx-indent": "off",
    "linebreak-style": ["off", "windows"]
  }
}
